<IfModule mod_rewrite.c>
#Activar rewrite
RewriteEngine on
ErrorDocument 404 http://{HTTP_HOST}/laUltimaYnosVamos/error/index/

#No se puede cargar un archivo cualquiera ni un fichero cualquiera en URL, s√≥lo reescribir URL
RewriteCond %{SCRIPT_FILENAME} !-d 
RewriteCond %{SCRIPT_FILENAME} !-f

#pon  (controller)/(action)
RewriteRule ^(.*)/(.*) index.php?controller=$1&action=$2
</IfModule>

